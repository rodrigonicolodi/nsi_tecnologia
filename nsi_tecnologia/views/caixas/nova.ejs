<% layout = 'layout' %>
<% titulo = 'Novo Caixa' %>

<div class="container">
  <h2>Novo Caixa</h2>

  <% if (erro) { %>
    <p class="erro"><%= erro %></p>
  <% } %>

  <form action="/caixas/novo" method="POST" class="formulario">
    <div class="campo">
      <label for="nome">Nome do Caixa</label>
      <input type="text" name="nome" id="nome" required placeholder="Ex: Banco Sicredi, Dinheiro em mÃ£os">
    </div>

    <div class="campo">
        <label for="valor_inicial">Valor Inicial</label>
        <input type="number" step="0.01" name="valor_inicial" id="valor_inicial" value="<%= caixa?.valor_inicial || 0 %>">
    </div>

    <button type="submit" class="btn btn-azul">
      <i class="fas fa-save"></i> Salvar
    </button>
  </form>
</div>