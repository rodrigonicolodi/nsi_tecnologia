    gap: 10px;
  }
  
  .transferencia-arrow {
    color: #007bff;
    font-size: 1.2em;
  }
  
  .transferencia-descricao {
    color: #495057;
    font-style: italic;
  }
  
  .transferencia-usuario {
    color: #6c757d;
    font-size: 0.9em;
  }
  
  .filtros {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
  
  .paginacao {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-top: 20px;
  }
  
  .paginacao a, .paginacao span {
    padding: 8px 12px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    text-decoration: none;
    color: #007bff;
  }
  
  .paginacao .ativa {
    background: #007bff;
    color: white;
