<% layout = 'layout' %>
<% titulo = 'Lista de Pessoas' %>

<div class="container">
  <h2>Lista de Pessoas</h2>

  <a href="/pessoas/novo" class="btn-azul" style="margin-bottom: 20px;">
    <i class="fas fa-user-plus"></i> Nova Pessoa
  </a>

  <!-- üîç Filtros -->
  <form method="GET" action="/pessoas" class="filtros">
    <div class="campo">
      <label for="busca">Buscar:</label>
      <input type="text" name="busca" id="busca" placeholder="Buscar por nome" value="<%= busca %>">
    </div>

    <div class="campo">
      <label for="tipo">Tipo:</label>
      <select name="tipo" id="tipo">
        <option value="">Todos os tipos</option>
        <option value="cliente" <%= tipo === 'cliente' ? 'selected' : '' %>>Cliente</option>
        <option value="tecnico" <%= tipo === 'tecnico' ? 'selected' : '' %>>T√©cnico</option>
        <option value="fornecedor" <%= tipo === 'fornecedor' ? 'selected' : '' %>>Fornecedor</option>
        <option value="interno" <%= tipo === 'interno' ? 'selected' : '' %>>Interno</option>
      </select>
    </div>

    <div class="campo">
      <label for="status">Status:</label>
      <select name="status" id="status">
        <option value="">Todos os status</option>
        <option value="ativo" <%= status === 'ativo' ? 'selected' : '' %>>Ativo</option>
        <option value="inativo" <%= status === 'inativo' ? 'selected' : '' %>>Inativo</option>
      </select>
    </div>

    <div class="campo">
      <button type="submit" class="btn btn-azul">
        <i class="fas fa-filter"></i> Filtrar
      </button>
    </div>

    <div class="campo">
      <a href="/pdf/pessoas?busca=<%= encodeURIComponent(busca || '') %>&tipo=<%= encodeURIComponent(tipo || '') %>&status=<%= encodeURIComponent(status || '') %>" class="btn btn-vermelho" target="_blank">
        <i class="fas fa-file-pdf"></i> Exportar PDF
      </a>
    </div>
  </form>

  <% if (erro) { %>
    <p class="erro"><%= erro %></p>
  <% } %>
  <% if (sucesso) { %>
    <p class="sucesso"><%= sucesso %></p>
  <% } %>

  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Documento</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Status</th>
          <th>A√ß√µes</th>
        </tr>
      </thead>
      <tbody>
        <% pessoas.forEach(p => { %>
          <tr>
            <td><%= p.nome %></td>
            <td><%= p.tipo %></td>
            <td><%= p.documento %></td>
            <td><%= p.email %></td>
            <td><%= p.telefone || p.celular || p.whatsapp %></td>
            <td><%= p.status %></td>
            <td>
              <a href="/pessoas/exibir/<%= p.id %>" class="btn-acao btn-azul" title="Exibir">
                <i class="fas fa-eye"></i>
              </a>
              <a href="/pessoas/editar/<%= p.id %>" class="btn-acao btn-azul" title="Editar">
                <i class="fas fa-edit"></i>
              </a>
              <button type="button" class="btn-acao btn-vermelho" data-id="<%= p.id %>" title="Excluir">
                <i class="fas fa-trash-alt"></i>
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- üìÑ Pagina√ß√£o -->
  <% if (totalPaginas > 1) { %>
    <div class="paginacao" style="margin-top: 20px; display: flex; gap: 5px;">
      <% for (let i = 1; i <= totalPaginas; i++) { %>
        <a href="?pagina=<%= i %>&busca=<%= busca %>&tipo=<%= tipo %>&status=<%= status %>" class="btn-pagina <%= pagina === i ? 'ativo' : '' %>">
          <%= i %>
        </a>
      <% } %>
    </div>
  <% } %>
</div>

<!-- üîî Modal de confirma√ß√£o -->
<div id="modal-confirmacao" class="modal">
  <div class="modal-conteudo">
    <p>Tem certeza que deseja excluir esta pessoa?</p>
    <form id="form-confirmar" method="POST">
      <button type="submit" class="btn-azul">Confirmar</button>
      <button type="button" class="btn-vermelho" onclick="fecharModal()">Cancelar</button>
    </form>
  </div>
</div>

<!-- üß† Script para controle do modal -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('modal-confirmacao');
    const formConfirmar = document.getElementById('form-confirmar');

    document.querySelectorAll('.btn-vermelho[data-id]').forEach(botao => {
      botao.addEventListener('click', () => {
        const id = botao.getAttribute('data-id');
        formConfirmar.setAttribute('action', `/pessoas/excluir/${id}`);
        modal.style.display = 'flex';
      });
    });

    window.fecharModal = function () {
      modal.style.display = 'none';
    };
  });
</script>

<style>
.filtros {
    display: flex;
    gap: 15px;
    align-items: end;
    flex-wrap: wrap;
    margin-bottom: 20px;
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 8px;
}

.campo {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.campo label {
    font-weight: 600;
    color: #333;
    font-size: 0.9em;
}

.campo input,
.campo select {
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
}

/* Estilos espec√≠ficos para filtros */
.filtros .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.filtros .btn-azul {
    background-color: #0077cc;
    color: white;
}

.filtros .btn-azul:hover {
    background-color: #005fa3;
    color: white;
    text-decoration: none;
}

.filtros .btn-vermelho {
    background-color: #cc3300;
    color: white;
}

.filtros .btn-vermelho:hover {
    background-color: #a62800;
    color: white;
    text-decoration: none;
}
</style>