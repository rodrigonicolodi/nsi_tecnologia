                            </td>
                            <td class="tecnico-nome"><%= tecnico.tecnico_nome %></td>
                            <td class="valor-destaque"><%= tecnico.total_os %></td>
                            <td class="valor-verde"><%= tecnico.os_concluidas %></td>
                            <td>
                                <div class="progresso-container">
                                    <div class="progresso-bar">
                                        <div class="progresso-fill" style="width: <%= tecnico.taxa_conclusao || 0 %>%"></div>
                                    </div>
                                    <span class="progresso-texto"><%= tecnico.taxa_conclusao || 0 %>%</span>
                                </div>
                            </td>
                            <td class="valor-principal">R$ <%= parseFloat(tecnico.faturamento || 0).toFixed(2) %></td>
                            <td class="valor-azul">
                                <%= tecnico.tempo_medio_execucao ? parseFloat(tecnico.tempo_medio_execucao).toFixed(1) : '-' %>h
                            </td>
                            <td>
                                <% 
                                const performance = parseFloat(tecnico.taxa_conclusao || 0);
                                let classePerformance = 'performance-baixa';
                                if (performance >= 80) classePerformance = 'performance-alta';
                                else if (performance >= 60) classePerformance = 'performance-media';
                                %>
                                <span class="performance-badge <%= classePerformance %>">
                                    <% if (performance >= 80) { %>
