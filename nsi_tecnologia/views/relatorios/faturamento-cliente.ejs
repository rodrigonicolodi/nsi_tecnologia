<% layout = 'layout' %>
<% titulo = 'Relat√≥rio de Faturamento por Cliente' %>

<div class="container">
    <h2>Relat√≥rio de Faturamento por Cliente</h2>

    <!-- Filtros -->
    <form method="GET" action="/relatorios/faturamento-cliente" class="filtros">
        <div class="campo">
            <label for="inicio">Data In√≠cio:</label>
            <input type="date" name="inicio" id="inicio" value="<%= inicio %>">
        </div>

        <div class="campo">
            <label for="fim">Data Fim:</label>
            <input type="date" name="fim" id="fim" value="<%= fim %>">
        </div>

        <div class="campo">
            <button type="submit" class="btn btn-azul">
                <i class="fas fa-search"></i> Gerar Relat√≥rio
            </button>
        </div>

        <div class="campo">
            <a href="/pdf/faturamento-cliente?inicio=<%= encodeURIComponent(inicio || '') %>&fim=<%= encodeURIComponent(fim || '') %>" class="btn btn-vermelho" target="_blank">
                <i class="fas fa-file-pdf"></i> Exportar PDF
            </a>
        </div>
    </form>

    <% if (erro) { %>
        <p class="erro"><%= erro %></p>
    <% } %>

    <% if (resultados && resultados.length > 0) { %>
        <!-- Resumo Geral -->
        <div class="card" style="margin-top: 20px;">
            <h3>Resumo Geral</h3>
            <div class="info-grid">
                <div class="info-item">
                    <label>Total de Clientes:</label>
                    <span class="valor-destaque"><%= resultados.length %></span>
                </div>
                <div class="info-item">
                    <label>Total de OS:</label>
                    <span class="valor-azul"><%= resultados.reduce((sum, r) => sum + parseInt(r.total_os || 0), 0) %></span>
                </div>
                <div class="info-item">
                    <label>Faturamento Total:</label>
                    <span class="valor-principal">R$ <%= resultados.reduce((sum, r) => sum + parseFloat(r.total_faturamento || 0), 0).toFixed(2) %></span>
                </div>
                <div class="info-item">
                    <label>Ticket M√©dio Geral:</label>
                    <span class="valor-verde">R$ <%= (resultados.reduce((sum, r) => sum + parseFloat(r.total_faturamento || 0), 0) / resultados.reduce((sum, r) => sum + parseInt(r.total_os || 0), 0)).toFixed(2) %></span>
                </div>
            </div>
        </div>

        <!-- Ranking de Clientes -->
        <div class="table-wrapper" style="margin-top: 20px;">
            <h3>Ranking de Faturamento por Cliente</h3>
            <table class="tabela">
                <thead>
                    <tr>
                        <th>Posi√ß√£o</th>
                        <th>Cliente</th>
                        <th>Total de OS</th>
                        <th>Valor Servi√ßos</th>
                        <th>Valor Produtos</th>
                        <th>Descontos</th>
                        <th>Faturamento Total</th>
                        <th>Ticket M√©dio</th>
                        <th>% do Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                    const faturamentoTotal = resultados.reduce((sum, r) => sum + parseFloat(r.total_faturamento || 0), 0);
                    %>
                    <% resultados.forEach((cliente, index) => { %>
                        <tr class="<%= index < 3 ? 'top-cliente' : '' %>">
                            <td>
                                <% if (index === 0) { %>
                                    <span class="posicao posicao-1">ü•á</span>
                                <% } else if (index === 1) { %>
                                    <span class="posicao posicao-2">ü•à</span>
                                <% } else if (index === 2) { %>
                                    <span class="posicao posicao-3">ü•â</span>
                                <% } else { %>
                                    <span class="posicao"><%= index + 1 %>¬∫</span>
                                <% } %>
                            </td>
                            <td class="cliente-nome"><%= cliente.cliente_nome %></td>
                            <td class="valor-destaque"><%= cliente.total_os %></td>
                            <td class="valor-azul">R$ <%= parseFloat(cliente.total_servicos || 0).toFixed(2) %></td>
                            <td class="valor-verde">R$ <%= parseFloat(cliente.total_produtos || 0).toFixed(2) %></td>
                            <td class="valor-vermelho">R$ <%= parseFloat(cliente.total_descontos || 0).toFixed(2) %></td>
                            <td class="valor-principal">R$ <%= parseFloat(cliente.total_faturamento || 0).toFixed(2) %></td>
                            <td class="valor-azul">R$ <%= parseFloat(cliente.ticket_medio || 0).toFixed(2) %></td>
                            <td class="valor-verde">
                                <%= faturamentoTotal > 0 ? ((parseFloat(cliente.total_faturamento || 0) / faturamentoTotal) * 100).toFixed(1) : 0 %>%
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Gr√°fico de Participa√ß√£o (simulado) -->
        <div class="card" style="margin-top: 20px;">
            <h3>Top 5 Clientes - Participa√ß√£o no Faturamento</h3>
            <div class="grafico-participacao">
                <% resultados.slice(0, 5).forEach((cliente, index) => { %>
                    <div class="barra-cliente">
                        <div class="cliente-info">
                            <span class="cliente-nome"><%= cliente.cliente_nome %></span>
                            <span class="cliente-valor">R$ <%= parseFloat(cliente.total_faturamento || 0).toFixed(2) %></span>
                        </div>
                        <div class="barra-container">
                            <div class="barra" style="width: <%= faturamentoTotal > 0 ? (parseFloat(cliente.total_faturamento || 0) / faturamentoTotal) * 100 : 0 %>%"></div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } else { %>
        <div class="card" style="margin-top: 20px; text-align: center;">
            <p>Nenhum dado encontrado para o per√≠odo selecionado.</p>
        </div>
    <% } %>

    <div style="margin-top: 30px;">
        <a href="/relatorios/listar" class="btn btn-azul">
            <i class="fas fa-arrow-left"></i> Voltar para Relat√≥rios
        </a>
    </div>
</div>

<style>
.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    margin-top: 15px;
}

.info-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.info-item label {
    font-weight: 600;
    color: #666;
    font-size: 0.9em;
}

.info-item span {
    font-size: 1.1em;
}

.valor-destaque {
    font-weight: bold;
    color: #0077cc;
}

.valor-principal {
    font-weight: bold;
    color: #2e7d32;
    font-size: 1.1em;
}

.valor-azul {
    font-weight: bold;
    color: #0077cc;
}

.valor-verde {
    font-weight: bold;
    color: #28a745;
}

.valor-vermelho {
    font-weight: bold;
    color: #dc3545;
}

.top-cliente {
    background-color: #f8f9fa;
}

.posicao {
    font-weight: bold;
    font-size: 1.2em;
}

.posicao-1 { color: #ffd700; }
.posicao-2 { color: #c0c0c0; }
.posicao-3 { color: #cd7f32; }

.cliente-nome {
    font-weight: 600;
    color: #333;
}

.grafico-participacao {
    margin-top: 20px;
}

.barra-cliente {
    margin-bottom: 15px;
}

.cliente-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}

.barra-container {
    width: 100%;
    height: 20px;
    background-color: #e9ecef;
    border-radius: 10px;
    overflow: hidden;
}

.barra {
    height: 100%;
