<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof titulo !== 'undefined' ? titulo : 'NSI Tecnologia' %></title>

  <!-- Estilos principais -->
  <link rel="stylesheet" href="/css/style.css">

