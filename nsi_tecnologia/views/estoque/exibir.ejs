<% layout = 'layout' %>
<% titulo = 'Detalhes do Produto' %>

<div class="container">
  <h2>Detalhes do Produto</h2>

  <div class="detalhes-produto">
    <table>
      <tr><th>Nome</th><td><%= produto.nome || '-' %></td></tr>
      <tr><th>Código</th><td><%= produto.codigo || '-' %></td></tr>
      <tr><th>Categoria</th><td><%= produto.categoria || '-' %></td></tr>
      <tr><th>Marca</th><td><%= produto.marca || '-' %></td></tr>
      <tr><th>Modelo</th><td><%= produto.modelo || '-' %></td></tr>
      <tr><th>Unidade</th><td><%= produto.unidade || '-' %></td></tr>
      <tr><th>Custo</th><td>R$ <%= Number(produto.custo || 0).toFixed(2) %></td></tr>
      <tr><th>Preço de Venda</th><td>R$ <%= Number(produto.preco_venda || 0).toFixed(2) %></td></tr>
      <tr><th>Lucro</th><td>R$ <%= Number((produto.preco_venda || 0) - (produto.custo || 0)).toFixed(2) %></td></tr>
      <tr><th>Estoque Atual</th><td><%= produto.estoque_atual ?? '-' %></td></tr>
      <tr><th>Status</th><td><%= produto.status || '-' %></td></tr>
      <tr><th>Descrição Técnica</th><td><%= produto.descricao_tecnica || '-' %></td></tr>
      <tr><th>Criado em</th><td><%= produto.criado_em ? produto.criado_em.toLocaleString() : '-' %></td></tr>
    </table>
  <div class="detalhes-produto">
    <table>
    <!-- conteúdo da tabela -->
    </table>
  </div>
  <div class="botoes-voltar">
    <a href="/estoque" class="btn btn-azul">
      <i class="fas fa-arrow-left"></i> Voltar
    </a>
  </div>
</div>